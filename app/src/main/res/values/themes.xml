<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fashion_app" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="FacebookLoginButton">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawableLeft">@drawable/iconfb</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9F0F0F</item>
        <item name="colorPrimaryDark">#FEFEFF</item>
        <item name="colorAccent">#03DAC5</item>
    </style>

    <style name="NoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#9F0F0F</item>
        <item name="colorPrimaryDark">#FEFEFF</item>
        <item name="colorAccent">#03DAC5</item>
    </style>
</resources>