<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ChiTietHoaDonFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="255dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/tvMaHoaDon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ma hoa don"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#0B0A0B"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvMaNguoiDung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ma nguoi dung"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#0B0A0B"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvTenNguoiDung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ten nguoi dung"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#0B0A0B"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvThoiGian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thoi gian"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#0B0A0B"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="340dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/border">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_hoadon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/border">
                <TextView
                    android:id="@+id/tvTongTien"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Thành tiền:  "
                    android:textSize="20dp"
                    android:textColor="#0B0A0B"
                    android:layout_marginLeft="50dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/border"
                android:layout_marginBottom="30dp">
                <Button
                    android:id="@+id/btnTongTien"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Trạng thái"
                    android:textSize="25dp"
                    android:textColor="#0B0A0B"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#ffff"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>